            <TextView
                android:id="@+id/fragment_report_gain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Total De Ganhos:"
                android:textColor="@color/pink"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/fragment_report_value_gain"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_report_value_gain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="R$2.000,00"
                android:textAlignment="viewEnd"
                android:textColor="@color/pink"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fragment_report_gain"
                app:layout_constraintTop_toTopOf="@id/fragment_report_gain" />

            <TextView
                android:id="@+id/fragment_report_expend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Total De Gastos:"
                android:textColor="@color/red"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/fragment_report_value_gain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_report_gain" />

            <TextView
                android:id="@+id/fragment_report_value_expand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="R$500,00"
                android:textAlignment="viewEnd"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fragment_report_expend"
                app:layout_constraintTop_toTopOf="@id/fragment_report_expend" />

            <TextView
                android:id="@+id/fragment_report_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Sobrou:"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fragment_report_value_gain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_report_expend" />

            <TextView
                android:id="@+id/fragment_report_value_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="R$1.500,00"
                android:textAlignment="viewEnd"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fragment_report_left"
                app:layout_constraintTop_toTopOf="@id/fragment_report_left" />

