<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_service"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toStartOf="@+id/imgBtn_add_Service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="Nome do ServiÃ§o" />

    <ImageButton
        android:id="@+id/imgBtn_add_Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/sv_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sv_service"
        app:layout_constraintTop_toTopOf="@+id/sv_service"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/tv_add_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adicionar Selecionados"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imgBtn_add_Service"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_add_Service" />

    <ListView
        android:id="@+id/lv_service"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:divider="@color/black"
        app:layout_constraintEnd_toEndOf="@id/imgBtn_add_Service"
        app:layout_constraintStart_toStartOf="@id/sv_service"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_selected" />


</androidx.constraintlayout.widget.ConstraintLayout>